{
  "name": "tableflip-www",
  "version": "1.0.0",
  "description": "tableflip-www",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all build watch",
    "postinstall": "npm run build",
    "build": "npm-run-all --parallel build:*",
    "build:static": "rsync --delete -a src/favicon.ico src/font src/img dist",
    "build:css": "postcss --use postcss-import --use postcss-cssnext src/main.css -d dist",
    "build:html": "jade src/index.jade --out dist",
    "watch": "npm-run-all --parallel watch:*",
    "watch:serve": "browser-sync start --files 'dist/*' --server dist",
    "watch:static": "nodemon -w src/favicon.ico -w src/img -w src/font -e '*' -x npm run build:static",
    "watch:css": "nodemon -w src -e css -x npm run build:css",
    "watch:html": "nodemon -w src -e jade,md -x npm run build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tableflip/tableflip-www.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tableflip/tableflip-www/issues"
  },
  "homepage": "https://github.com/tableflip/tableflip-www#readme",
  "dependencies": {
    "jade": "^1.11.0",
    "jstransformer-remarkable": "^1.1.1",
    "normalize.css": "^3.0.3",
    "npm-run-all": "^1.2.11",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2"
  },
  "devDependencies": {
    "browser-sync": "^2.11.1"
  }
}
